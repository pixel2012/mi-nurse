.fb-container{
  display: block;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #F9F9F9;
}
textarea{
  display: inline-block;
  width: 100%;
  min-height: 400rpx;
  box-sizing: border-box;
  padding:20rpx;
  font-size: 28rpx;
  color:textarea;
  background-color: #fff;
}
input{
  margin-top: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  font-size: 28rpx;
  color: #D7D7D7;
}
.fb-add-img{
  padding:30rpx;
}
.ble-button-box{
  display: block;
  width: 100%;
  text-align: center;
  margin-top: 80rpx;
}
.ble-button{
  display: inline-block;
  width: 307rpx;
  padding:20rpx;
  border:1rpx solid #FF4578;
  border-radius: 8rpx;
  font-size: 30rpx;
  color: #FF4578;
}